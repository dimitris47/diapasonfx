<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.dimitris47</groupId>
  <artifactId>DiapasonFX</artifactId>
  <version>4.0.1</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.sonatype.haven.HavenCli</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>io.github.fvarrui</groupId>
        <artifactId>javapackager</artifactId>
        <version>1.5.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>package</goal>
            </goals>
            <configuration>
              <mainClass>com.dimitris47.diapasonfx.Launcher</mainClass>
              <bundleJre>true</bundleJre>
              <linuxConfig>
                <pngFile>target/assets/linux/DiapasonFX.png</pngFile>
              </linuxConfig>
              <winConfig>
                <icoFile>target\assets\windows\DiapasonFX.ico</icoFile>
              </winConfig>
              <macConfig>
                <icnsFile>target/assets/mac/DiapasonFX.icns</icnsFile>
                <volumeIcon>target/assets/mac/DiapasonFX.icns</volumeIcon>
              </macConfig>
              <generateInstaller>true</generateInstaller>
              <administratorRequired>false</administratorRequired>
              <platform>auto</platform>
              <organizationName>DP Software</organizationName>
              <licenseFile>LICENSE</licenseFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>22</maven.compiler.target>
    <maven.compiler.source>22</maven.compiler.source>
  </properties>
</project>
